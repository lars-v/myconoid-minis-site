---
import { getCollection } from 'astro:content';
import type { GetStaticPaths, InferGetStaticPropsType } from 'astro';
import Layout from '../../layouts/Layout.astro';
import Lightbox from '../../components/Lightbox.astro';

export const getStaticPaths = (async () => {
  const miniatures = await getCollection('miniatures');
  return miniatures.map((mini) => ({
    params: { slug: mini.slug },
    props: { mini },
  }));
}) satisfies GetStaticPaths;

type Props = InferGetStaticPropsType<typeof getStaticPaths>;

const { mini } = Astro.props as Props;
const { Content } = await mini.render();
---

<Layout title={mini.data.title}>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl font-bold mb-6">{mini.data.title}</h1>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Main Image -->
        <div>
          <img 
            src={mini.data.image} 
            alt={mini.data.title}
            class="w-full rounded-lg shadow-lg clickable-image"
            data-caption={`${mini.data.title} - Main Photo`}
            data-gallery={mini.slug}
          />
          
          <!-- Gallery Images -->
          {mini.data.gallery && mini.data.gallery.length > 0 && (
            <div class="mt-4 grid grid-cols-2 gap-2">
              {mini.data.gallery.map((img, index) => (
                <img 
                  src={img.image} 
                  alt={`${mini.data.title} gallery image ${index + 1}`}
                  class="w-full h-32 object-cover rounded clickable-image"
                  data-caption={`${mini.data.title} - Gallery Image ${index + 1}`}
                  data-gallery={mini.slug}
                />
              ))}
            </div>
          )}
        </div>
        
        <!-- Details -->
        <div>
          <div class="space-y-4">
            <div>
              <h3 class="font-semibold">Faction:</h3>
              <p>{mini.data.faction}</p>
            </div>
            
            <div>
              <h3 class="font-semibold">Scale:</h3>
              <p>{mini.data.scale}</p>
            </div>
            
            <div>
              <h3 class="font-semibold">Status:</h3>
              <p>{mini.data.status}</p>
            </div>
            
            {mini.data.paintScheme && (
              <div>
                <h3 class="font-semibold">Paint Scheme:</h3>
                <p>{mini.data.paintScheme}</p>
              </div>
            )}
            
            {mini.data.techniques && mini.data.techniques.length > 0 && (
              <div>
                <h3 class="font-semibold">Techniques Used:</h3>
                <ul class="list-disc list-inside">
                  {mini.data.techniques.map((technique) => (
                    <li>{technique}</li>
                  ))}
                </ul>
              </div>
            )}
            
            {mini.data.forSale && mini.data.price && (
              <div class="bg-green-100 dark:bg-green-900 p-4 rounded-lg">
                <h3 class="font-semibold text-green-800 dark:text-green-200">For Sale</h3>
                <p class="text-2xl font-bold text-green-600">${mini.data.price}</p>
              </div>
            )}
          </div>
          
          <!-- Description Content -->
          <div class="mt-8 prose dark:prose-invert">
            <Content />
          </div>
        </div>
      </div>
      
      <div class="mt-8">
        <a 
          href="/gallery"
          class="inline-block px-6 py-3 bg-gray-600 text-white rounded hover:bg-gray-700 transition-colors"
        >
          ‚Üê Back to Gallery
        </a>
      </div>
    </div>
  </main>
  
  <Lightbox />
</Layout>